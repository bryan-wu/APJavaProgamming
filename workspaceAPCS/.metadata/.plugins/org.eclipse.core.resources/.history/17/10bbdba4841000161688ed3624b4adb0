package zMine;

import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;

import javax.swing.Timer;


public class Tile
{

    private Color color;

    private boolean destroyable;

    private boolean passable;


    /**
     * @param c
     *            color of tile
     */
    /**
     * @param c
     *            tile color
     * @param des
     *            destroyable boolean
     * @param pass
     *            passable boolean
     */
    public Tile( Color c, boolean des, boolean pass )
    {
        color = c;
        destroyable = des;
        passable = pass;
    }
}
